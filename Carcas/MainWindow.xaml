<Window x:Class="Carcas.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Carcas"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="75"/>
            <RowDefinition/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <Grid Height="75" Background="#FFBAE3E8">
                    <Image Width="100" Source="/Resources/photo_2022-02-01_16-11-08.jpg" HorizontalAlignment="Left" Grid.Row="0"/>
                    <TextBlock TextWrapping="Wrap" Text="Header" HorizontalAlignment="Center" FontSize="30"/>
                </Grid>
        <Grid Height="100" Background="#FF445C34" Grid.Row="2"/>
        <Frame Name="MainFrame" Grid.Row="1" ContentRendered="MainFrame_ContentRendered"/>


    </Grid>
</Window>
